<head>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.3/css/materialize.min.css">
  <link rel="stylesheet" href="materialize.scss.scss">
  <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.3/js/materialize.min.js"></script>
</head>
<body class="container">
  <p id="notice"><%= notice %></p>

  <div class="row">
    <div class="col s12 m12 l12">
      <h1>Students</h1>
    </div>
  </div>

  <div class="row">
    <div class="col s12 m12 l12">
      <div class="card-panel teal">
        <%= form_tag(students_path, :method => "get", id: "search-form") do %>
            <%= text_field_tag :search, params[:search], placeholder: "Search Students" %>
            <%= submit_tag "Search" %>
        <% end %>

        <% if @students.present? %>

        <% else %>
            <p>There are no students containing the term(s) <%= params[:search] %>.</p>
        <% end %>
      </div>
    </div>
  </div>

  <table class="responsive-table">
    <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Section</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @students.each do |student| %>
        <tr>
          <td><%= student.name %></td>
          <td><%= student.email %></td>
          <td><%= student.section.name %></td>
          <td><%= link_to 'Show', student %></td>
          <td><%= link_to 'Edit', edit_student_path(student) %></td>
          <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
    </tbody>
  </table>

  <%= link_to 'New Student', new_student_path %>

</body>
