<p id="notice"><%= notice %></p>

<h1>Sections</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Course</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sections.each do |section| %>
      <tr>
        <td><%= section.name %></td>
        <td><%= section.course.name %></td>
        <td><%= link_to 'Show', section %></td>
        <td><%= link_to 'Edit', edit_section_path(section) %></td>
        <td><%= link_to 'Destroy', section, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>


  <tr>
    <%= form_tag(sections_path, :method => "get", id: "search-form") do %>
        <%= text_field_tag :search, params[:search], placeholder: "Search Sections" %>
        <%= submit_tag "Search" %>
    <% end %>

    <% if @sections.present? %>

    <% else %>
        <p>There are no sections named <%= params[:search] %>.</p>
    <% end %>

  </tr>
</table>

<br>

<%= link_to 'New Section', new_section_path %>
