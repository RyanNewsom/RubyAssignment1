<head>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.3/css/materialize.min.css">
  <link rel="stylesheet" href="materialize.scss.scss">
  <link rel="stylesheet" href="common.scss">
  <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.3/js/materialize.min.js"></script>
</head>



<body>
  <nav>
    <div class="nav-wrapper indigo darken-1">
      <a href="#" class="brand-logo center">Sections</a>
      <ul id="nav-mobile" class="right hide-on-med-and-down">
        <li><a href="/students">Students</a></li>
        <li><a href="/professors">Professors</a></li>
        <li><a href="/courses">Course</a></li>
        <li><a href="/sections">Sections</a></li>
      </ul>
    </div>
  </nav>

  <div class="container ">
    <p id="notice"><%= notice %></p>
    <div class="row">
      <div class="col s12 m12 l12">
        <div class="card-panel gray">
          <%= form_tag(sections_path, :method => "get", id: "search-form") do %>
              <%= text_field_tag :search, params[:search], placeholder: "Search Sections" %>
              <%= submit_tag "Search" %>
          <% end %>

          <% if @sections.present? %>

          <% else %>
              <p>There are no sections named <%= params[:search] %>.</p>
          <% end %>
        </div>
      </div>
    </div>


    <div class="row">
      <div class="col s12 m12 l12">
        <div class="card-panel blue-grey lighten-5">
          <table class="responsive-table ">
            <thead>
            <tr>
              <th>Name</th>
              <th>Course</th>
              <th colspan="3"></th>
            </tr>
            </thead>

            <tbody>
            <% @sections.each do |section| %>
                <tr>
                  <td><%= section.name %></td>
                  <td><%= section.course.name %></td>
                  <td><%= link_to 'Show', section %></td>
                  <td><%= link_to 'Edit', edit_section_path(section) %></td>
                  <td><%= link_to 'Destroy', section, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col s12 m12 l12 offset-m3">
        <a class="waves-effect waves-light btn btn-block "<%= link_to 'New Section', new_section_path %></a>
      </div>
    </div>

  </div>
</body>


